<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_yout"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/back_text_mzhf" />

        <ImageView
            android:id="@+id/image_title_message"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/blank_message" />

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_yout"
        android:background="@color/bc_radio"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_facial_care"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bc_radio_selector"
            android:drawableTop="@mipmap/facial_care"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="面部护理"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/btn_perfume_makeup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bc_radio_selector"
            android:drawableTop="@mipmap/perfume_makeup"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="香水彩妆"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/btn_hair_care"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bc_radio_selector"
            android:drawableTop="@mipmap/hair_care"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="洗头护理"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/btn_physical_care"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bc_radio_selector"
            android:drawableTop="@mipmap/physical_care"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="身体护理"
            android:textColor="#fff" />

    </RadioGroup>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_group"></FrameLayout>


</RelativeLayout>
