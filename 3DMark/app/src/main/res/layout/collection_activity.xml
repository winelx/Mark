<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_collection_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:src="@drawable/back_pink" />

        <LinearLayout
            android:id="@+id/ll_collection_baby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collection_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝贝"
                android:textColor="@color/Pink"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_collection_baby"
                android:layout_width="46dp"
                android:layout_height="2dp"
                android:background="@drawable/transverse_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_collection_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collection_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺"
                android:textColor="@color/text_black"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_collection_shop"
                android:layout_width="46dp"
                android:layout_height="2dp"
                android:background="@drawable/transverse_line"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fg_collection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>