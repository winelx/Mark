<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <include layout="@layout/title_main" />

    <LinearLayout
        android:id="@+id/rg_myorder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rb_pending_payment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/myorder_select"
                android:button="@null"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@drawable/btn_mark_left_item_selector"
                android:textSize="15sp" />


            <View
                android:id="@+id/view_pending_payment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transverse_line"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rb_wait_deliver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myorder_select"
                android:button="@null"
                android:gravity="center"
                android:text="待发货"
                android:textColor="@drawable/btn_mark_left_item_selector"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_wait_deliver"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transverse_line"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rb_receiving_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myorder_select"
                android:button="@null"
                android:gravity="center"
                android:text="待收货"
                android:textColor="@drawable/btn_mark_left_item_selector"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_receiving_goods"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transverse_line"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rb_pending_evaluation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myorder_select"
                android:button="@null"
                android:gravity="center"
                android:text="待评价"
                android:textColor="@drawable/btn_mark_left_item_selector"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_pending_evaluation"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transverse_line"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rb_refund"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myorder_select"
                android:button="@null"
                android:gravity="center"
                android:text="退款/售后"
                android:textColor="@drawable/btn_mark_left_item_selector"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_refund"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transverse_line"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_myorder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>