<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/image_order_shop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/follow" />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="店铺名" />

        <TextView
            android:id="@+id/tv_order_item_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="待付款"
            android:textColor="@color/Red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_order_head"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/headimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/image_order_head"
                android:ellipsize="end"
                android:lines="2"
                android:text="产品描述您大姐那款飒飒八点上班的首付妞儿把好师傅师傅认为dddd"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_product_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/image_order_head"
                android:ellipsize="end"
                android:lines="2"
                android:text="尺寸和颜色"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_collection" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_present"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_present_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="￥890"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/tv_order_Original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_order_present_price"
                android:layout_marginRight="15dp"
                android:text="￥990"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_order_Original_price"
                android:layout_marginRight="15dp"
                android:text="X1"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_order_commodity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共一件商品"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_collection" />

        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="合计￥890"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_collection" />

        <TextView
            android:id="@+id/tv_order_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="含运费（￥0.00）"

            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_collection" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_order_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_seller"
            android:text="联系卖家"
            android:textColor="@color/text_black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_order_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/contact_seller"
            android:text="取消订单"
            android:textColor="@color/text_black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_order_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_red"
            android:text="付款"
            android:textColor="@color/White"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>