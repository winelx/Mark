<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="25dp"
    android:background="#fff"
    android:orientation="horizontal">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_error" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:text="大家山东i减肥山东i附件odis风格都哦id还是佛哦id金佛系佛教的" />

        <com.example.administrator.a3dmark.util.MyProgress
            android:id="@+id/progressBar"
            style="@style/StyleProgressBarMini"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100" />

        <TextView
            android:id="@+id/price_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBar"
            android:layout_marginBottom="6dp"
            android:drawableLeft="@mipmap/money_red"
            android:text="298"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBar"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/price_now"
            android:text="￥298" />

        <TextView
            android:id="@+id/buynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/snap"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:text="已抢29888件"
            android:textSize="8sp" />


        <Button
            android:id="@+id/snap"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_q_red"
            android:text="马上抢"
            android:layout_marginRight="10dp"
            android:textColor="@color/bg_white"
            android:textSize="8sp" />

    </RelativeLayout>


</LinearLayout>
