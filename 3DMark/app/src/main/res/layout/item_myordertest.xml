<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/comm_text_tips"
                android:text="\@订单号 :"/>
            <EditText
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textColor="@color/comm_text_tips"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="123"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/cutline_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image_myorder_name_shop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/follow" />

                <TextView
                    android:id="@+id/tv_myorder_name_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="店铺名"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_myorder_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="付款状态"
                    android:textColor="@color/Red" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_white" />

    <ListView
        android:id="@+id/lv_myorder_testgoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/bg_white"
        android:dividerHeight="1dp">

    </ListView>

    <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="center_vertical|end"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_order_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共一件商品"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_collection" />

                <TextView
                    android:id="@+id/tv_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="合计￥890"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_collection" />

                <TextView
                    android:id="@+id/tv_order_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="含运费（￥0.00）"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_collection" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_order_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_seller"
                    android:text="联系卖家"
                    android:textColor="@color/text_black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_order_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/contact_seller"
                    android:text="取消订单"
                    android:textColor="@color/text_black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_order_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_red"
                    android:text="付款"
                    android:textColor="@color/White"
                    android:textSize="10sp" />
            </LinearLayout>
        <!--</LinearLayout>-->
    <!--</ScrollView>-->
</LinearLayout>