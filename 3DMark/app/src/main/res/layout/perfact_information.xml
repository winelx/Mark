<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <include layout="@layout/title_trans" />

    <ImageView
        android:id="@+id/Perfect_Photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/man"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_perfact_sex_bg_selector"
            android:gravity="center"
            android:text="男"
            android:textColor="@drawable/btn_perfact_sex_tv_color_selector"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/girl"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="@drawable/btn_perfact_sex_bg_selector"
            android:gravity="center"
            android:text="女"
            android:textColor="@drawable/btn_perfact_sex_tv_color_selector"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="22dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/nickname_person" />

        <EditText
            android:id="@+id/nick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="昵称"
            android:inputType="text"
            android:textColorHint="@color/White"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/White" />

    <TextView
        android:id="@+id/text_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="身高(cm)"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_height_reduce"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/relete_perfect" />

        <SeekBar
            android:id="@+id/progress_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:max="300"
            android:maxHeight="4dp"
            android:minHeight="1dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:progressDrawable="@drawable/layer_progress"
            android:thumb="@drawable/shape_circle" />

        <ImageView
            android:id="@+id/image_height_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/add_perfect" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="体重(kg)"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_weight_reduce"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/relete_perfect" />

        <SeekBar
            android:id="@+id/progress_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:max="200"
            android:maxHeight="4dp"
            android:minHeight="2dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:progressDrawable="@drawable/layer_progress"
            android:thumb="@drawable/shape_circle" />

        <ImageView
            android:id="@+id/image_weight_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/add_perfect" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_bust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="胸围(cm)"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_bust_reduce"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/relete_perfect" />

        <SeekBar
            android:id="@+id/progress_bust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:max="200"
            android:maxHeight="4dp"
            android:minHeight="2dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:progressDrawable="@drawable/layer_progress"
            android:thumb="@drawable/shape_circle" />

        <ImageView
            android:id="@+id/image_bust_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/add_perfect" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_waist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="腰围(cm)"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_waist_reduce"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/relete_perfect" />

        <SeekBar
            android:id="@+id/progress_waist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:max="200"
            android:maxHeight="4dp"
            android:minHeight="2dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:progressDrawable="@drawable/layer_progress"
            android:thumb="@drawable/shape_circle" />

        <ImageView
            android:id="@+id/image_waist_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/add_perfect" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_hipline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="臀围(cm)"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_hipline_reduce"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/relete_perfect" />

        <SeekBar
            android:id="@+id/progress_hipline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:max="200"
            android:maxHeight="4dp"
            android:minHeight="2dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:progressDrawable="@drawable/layer_progress"
            android:thumb="@drawable/shape_circle" />

        <ImageView
            android:id="@+id/image_hipline_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/add_perfect" />
    </LinearLayout>
</LinearLayout>