<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="left|bottom"
            android:background="@color/White"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="140dp">

            <TextView
                android:id="@+id/tv_pop_boutique_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥235"
                android:textColor="@color/Red"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pop_boutique_Stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="库存2346件"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="请选择尺码颜色"
                android:textColor="@color/Black"

                android:textSize="@dimen/text_size_collection" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_pop_boutique_remove"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/boutique_remove" />

        <ImageView
            android:id="@+id/image_pop_boutique_head"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_pink"
            android:src="@drawable/headimage_1" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="尺码"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/fl_boutique_evaluate_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        zhy:max_select="1">

    </com.zhy.view.flowlayout.TagFlowLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="颜色分类"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/fl_boutique_evaluate_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        zhy:max_select="1">
    </com.zhy.view.flowlayout.TagFlowLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="购买数量"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image_pop_boutique_reduce"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_add"
            android:src="@drawable/reduce" />

        <TextView
            android:id="@+id/tv_pop_boutique_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="2" />

        <ImageView
            android:id="@+id/image_pop_boutique_plus"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_add"
            android:src="@drawable/plus_1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/White"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_pop_boutique_sure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Pink"
            android:gravity="center"
            android:text="确   定"
            android:textColor="@color/White"
            android:textSize="@dimen/title"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
