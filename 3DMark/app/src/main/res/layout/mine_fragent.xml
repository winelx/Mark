<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_personmessage"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white"
            android:orientation="horizontal">

            <com.liji.circleimageview.CircleImageView
                android:id="@+id/image_mine_head"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/headimage" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_person_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="个性签名或个人介绍"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mine_Record"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:drawableLeft="@mipmap/trial_record"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="试穿记录"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/mine_dottline" />

            <TextView
                android:id="@+id/tv_mine_collection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:drawableLeft="@mipmap/collection_mine"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mine_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/bg_white"
            android:drawableLeft="@mipmap/myorder_mine"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="我的订单"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tv_mine_setup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white"
            android:drawableLeft="@mipmap/setup_mine"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="设置"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>

    <include
        layout="@layout/title_main"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <!--<include layout="@layout/title_main" />-->

</LinearLayout>