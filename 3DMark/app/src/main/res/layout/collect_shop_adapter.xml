<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="20dp">

    <com.liji.circleimageview.CircleImageView
        android:id="@+id/image_collection_head"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_collection_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_collection_shop_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="官方旗舰店"
            android:textColor="@color/Black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_collect_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_collection_shop_remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/collection_star_pink" />

        <TextView
            android:id="@+id/tv_collection_shop_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="取消关注"
            android:textColor="@color/Black"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>