<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_detail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_comment_submit_goods"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_image_goods" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="描述相符"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <com.example.administrator.a3dmark.util.MyRatingBar
            android:id="@+id/RB_Description_match"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/textView"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            app:starCount="5"
            app:starEmpty="@drawable/star_grey"
            app:starFill="@drawable/star_red"
            app:starHalf="@drawable/star_half"
            app:starImageSize="20dp"
            app:starPadding="15dp"
            app:starStep="2.5"
            app:stepSize="Half" />

        <TextView
            android:id="@+id/tv_comment_submit_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_white" />

    <EditText
        android:id="@+id/edt_comment_submit_goods"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@null"
        android:gravity="top"
        android:hint="请写下你对该商品的评价"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColorHint="@color/Black"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_comment_submit_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic" />

        <GridView
            android:id="@+id/CommentGridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="2dp"
            android:numColumns="3" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/image_comment_submit_shop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/touxiang_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="店铺评价"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="服务态度"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <com.example.administrator.a3dmark.util.MyRatingBar
            android:id="@+id/RB_Service_attitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:starCount="5"
            app:starEmpty="@drawable/star_grey"
            app:starFill="@drawable/star_red"
            app:starHalf="@drawable/star_half"
            app:starImageSize="20dp"
            app:starPadding="15dp"
            app:starStep="2.5"
            app:stepSize="Half">

        </com.example.administrator.a3dmark.util.MyRatingBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="物流速度"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <com.example.administrator.a3dmark.util.MyRatingBar
            android:id="@+id/RB_Logistics_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:starCount="5"
            app:starEmpty="@drawable/star_grey"
            app:starFill="@drawable/star_red"
            app:starHalf="@drawable/star_half"
            app:starImageSize="20dp"
            app:starPadding="15dp"
            app:starStep="2.5"
            app:stepSize="Half">

        </com.example.administrator.a3dmark.util.MyRatingBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_comment_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Red"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/White"
            android:textSize="@dimen/title_size" />
    </LinearLayout>
</LinearLayout>